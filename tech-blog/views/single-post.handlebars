<h2>{{post.title}}</h2>
<p>{{post.content}}</p>
<p>Posted by {{post.user.username}} on {{post.created_at}}</p>

{{#if logged_in}}
  <form id="comment-form">
    <textarea id="comment-content" name="comment-content" required></textarea>
    <button type="submit">Add Comment</button>
  </form>
{{/if}}

<h3>Comments</h3>
{{#each post.comments}}
  <div class="comment">
    <p>{{this.content}}</p>
    <p>Commented by {{this.user.username}} on {{this.created_at}}</p>
  </div>
{{/each}}

<script src="/js/comment.js"></script>
