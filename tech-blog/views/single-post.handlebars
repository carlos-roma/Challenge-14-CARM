<h1>{{title}}</h1>
<p>By {{user.username}} on {{createdAt}}</p>
<p>{{content}}</p>
<h2>Comments</h2>
{{#if logged_in}}
<form id="comment-form">
  <textarea id="comment" name="comment" required></textarea>
  <button type="submit">Submit Comment</button>
</form>
{{/if}}
{{#each comments}}
  <div class="comment">
    <p>{{comment_text}}</p>
    <p>By {{user.username}} on {{createdAt}}</p>
  </div>
{{/each}}
<script src="/js/comment.js"></script>
