<h2>Dashboard</h2>
<a href="/">Home</a> <!-- Added link to navigate to home -->
<button id="new-post">New Post</button>
<form id="post-form" class="new-post-form" style="display: none;">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required>
  </div>
  <div>
    <label for="content">Content</label>
    <textarea id="content" name="content" required></textarea>
  </div>
  <button type="submit">Create Post</button>
</form>
<div id="post-list">
  {{#each posts}}
  <div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <button class="delete-post" data-id="{{this.id}}">Delete</button>
    <button class="edit-post" data-id="{{this.id}}">Edit</button>
  </div>
  {{/each}}
</div>
<form id="edit-form" style="display: none;">
  <input type="hidden" id="edit-id" name="edit-id">
  <div>
    <label for="edit-title">Title</label>
    <input type="text" id="edit-title" name="edit-title" required>
  </div>
  <div>
    <label for="edit-content">Content</label>
    <textarea id="edit-content" name="edit-content" required></textarea>
  </div>
  <button type="submit">Update Post</button>
</form>
<script src="/js/dashboard.js"></script>
